{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "0.6.8",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "permissions": [
    "desktopCapture",
    "downloads",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "scripting",
    "tabs",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "__MSG_action_defaultTitle__"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "minimum_chrome_version": "116"
}
