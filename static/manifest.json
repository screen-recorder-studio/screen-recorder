{
  "manifest_version": 3,
  "name": "Screen Recorder Studio for SAAS",
  "version": "0.6.1",
  "description": "A Chrome extension for recording tabs, windows, screens, page regions, and elements",
  "permissions": [
    "desktopCapture",
    "downloads",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "scripting",
    "tabs",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Recording Panel",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "minimum_chrome_version": "116"
}