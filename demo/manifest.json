{
  "manifest_version": 3,
  "name": "SaaS Video Recorder",
  "version": "1.0.0",
  "description": "Record SaaS product demos with custom backgrounds",
  
  "permissions": [
    "activeTab",
    "tabs",
    "desktopCapture",
    "downloads",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SaaS Video Recorder",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "popup/*",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "minimum_chrome_version": "88"
}
